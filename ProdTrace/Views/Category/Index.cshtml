
@using ProdTrace.Models.Classes
@model  List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <td>ID</td>
        <td>Kategori Adı</td>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>
                @c.CategoryId
            </td>
            <td>
                @c.CategoryName
            </td>
            <td><a href="/Category/GetCategory/@c.CategoryId" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Category/DeleteCategory/@c.CategoryId" class="btn btn-danger">Sil</a></td>
        </tr>
    }

</table>

<a href="/Category/AddCategory" class="btn btn-primary">Kategori Ekle</a>
