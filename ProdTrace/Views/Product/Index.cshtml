@using ProdTrace.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>ÜRÜN GÖRSELİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.Brand</td>
            <td>@p.Stock</td>
            <td>@p.PurchasePrice</td>
            <td>@p.SalesPrice</td>
            <td>@p.Category.CategoryName</td>
            <td>@p.ProductImage</td>
            <td> <a href="/Product/DeleteProduct/@p.ProductId" class="btn btn-danger">SİL</a> </td>
            <td> <a href="/Product/GetProduct/@p.ProductId" class="btn btn-success">GÜNCELLE</a> </td>
        </tr>
    }
</table>
<a href="/Product/AddProduct/" class="btn btn-info">Yeni Ürün Ekle</a>


