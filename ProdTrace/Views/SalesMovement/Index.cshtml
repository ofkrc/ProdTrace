@using ProdTrace.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <td>ID</td>
            <td>Ürün</td>
            <td>Cari</td>
            <td>Personel</td>
            <td>Adet</td>
            <td>Fiyat</td>
            <td>Toplam</td>
            <td>Tarih</td>
            <td>Güncelle</td>
            <td>Detaylar</td>
        </tr>
    </thead>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.SalesId</td>
            <td>@d.Product.ProductName</td>
            <td>@d.Customer.CustomerName @d.Customer.CustomerSurname</td>
            <td>@d.Staff.StaffName @d.Staff.StaffSurname</td>
            <td>@d.Piece</td>
            <td>@d.Price</td>
            <td>@d.TotalPrice</td>
            <td>@d.Date</td>
            <td><a href="/SalesMovement/GetSales/@d.SalesId" class="btn btn-warning" style="color:white">Güncelle</a></td>
            <td><a href="/SalesMovement/SalesDetail/@d.SalesId" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>
        </tr>
    }

</table>

<a href="/SalesMovement/AddSales" class="btn btn-info">Satış Yap</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
