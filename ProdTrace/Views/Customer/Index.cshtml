@using ProdTrace.Models.Classes
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.CustomerId</td>
                    <td>@x.CustomerName</td>
                    <td>@x.CustomerSurname</td>
                    <td>@x.CustomerCountry</td>
                    <td>@x.CustomerMail</td>
                    <td><a href="/Customer/DeleteCustomer/@x.CustomerId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Customer/GetCustomer/@x.CustomerId" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="/Customer/CustomerSalesHistory/@x.CustomerId" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>
                </tr>
            }
</table>
<a href="/Customer/AddCustomer/" class="btn btn-info">Yeni Cari Ekle</a>

